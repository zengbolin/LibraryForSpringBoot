<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.berlin.library.dao.mapper.borrow.BookBorrowMapper">
    <!--column不做限制，可以为任意表的字段，而property须为type 定义的pojo属性-->
    <resultMap id="BookBorrowDTO" type="com.berlin.library.api.model.borrow.BookBorrowDTO">
        <id column="id" property="id" />

        <result column="user_id" property="userId"/>
        <result column="user_name" property="userName"/>
        <result column="book_id" property="bookId"/>
        <result column="book_name" property="bookName"/>
        <result column="count" property="count"/>
        <result column="start_date" property="startDate"/>
        <result column="end_date" property="endDate"/>
        <result column="price" property="price"/>
        <result column="trade_fee" property="tradeFee"/>

        <result column="tmp1" property="tmp1"/>
        <result column="tmp2" property="tmp2"/>
        <result column="create_date" property="creatDate"/>
        <result column="update_date" property="updateDate"/>
        <result column="valid_flag" property="validFlag"/>
    </resultMap>

    <sql id="base_column_list">
        id,user_id,user_name,book_id,book_name,count,start_date,end_date,price,trade_fee,tmp1,tmp2,create_date,update_date,valid_flag
    </sql>

    <insert id="insertBookBorrowDTO">
        insert into book_borrow(user_id,user_name,book_id,book_name,count,start_date,end_date,price,trade_fee,create_date,valid_flag)
        values (#{userId},#{userName},#{bookId},#{bookName},#{count},#{startDate},#{endDate},#{price},#{tradeFee},#{creatDate},#{validFlag})
    </insert>
    
    <select id="findById" parameterType="integer" resultMap="BookBorrowDTO">
        select
        <include refid="base_column_list" />
        FROM book_borrow
        WHERE id = #{id}
        and valid_flag = 'ENABLE'
    </select>

    <update id="updateBorrow">
        update book_borrow
        <set>
            <if test='count != null and count >= 0 '>
                count = #{count},
            </if>
            <if test="tmp1 != null">
                tmp1 = #{tmp1},
            </if>
            <if test="tmp2 != null">
                tmp2 = #{tmp2},
            </if>
            <if test="updateDate != null">
                update_date = #{updateDate},
            </if>
            <if test="validFlag != null">
                valid_flag = #{validFlag}
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>